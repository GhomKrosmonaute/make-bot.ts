{
  "compilerOptions": {
    "moduleResolution": "Node",
    "rootDir": "src",
    "module": "esnext",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2023"],
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      // Your configuration
      "#config": ["./src/config.ts"],
      "#types": ["./src/types.ts"],

      // Shortcut to core folder
      "#core/*": ["./src/core/*"],

      // Importable objects
      "#tables/*": ["./src/tables/*"],
      "#buttons/*": ["./src/buttons/*"],

      // Grouped import
      "#all": ["./src/core/index.ts"]
    }
  }
}
